<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div>
<form id="addinv" method="post" action="/inv/addnewinv">
            
    <fieldset>
        <legend>add new Invintory</legend>
            <%-  classList %>
            <label class="top">Make</label>
            <input type="text" name="inv_make" id="invMake" min="3" required value="<%= locals.inv_make %>">
            <label class="top">Model</label>
            <input type="text" name="inv_model" id="invModel" min="3" required value="<%= locals.inv_model %>">
            <label class="top">description</label>
            <textarea name="inv_description" in="invDescription" rows="10" cols="30" maxlength="200"></textarea>
            <label class="top">Image Path</label>
            <input type="text" name="inv_image" id="invImage" required value="<%= locals.inv_image %>">
            <label class="top">Thumbnail Path</label>
            <input type="text" name="inv_thumbnail" id="invThumbnail" required value="<%= locals.inv_thumbnail %>">
            <label class="top">Price</label>
            <input type="number" name="inv_price" id="invPrice" required value="<%= locals.inv_price %>">
            <label class="top">Year</label>
            <input type="text" name="inv_year" id="invYear" maxlength="4" minlength="4" required="<%= locals.inv_year %>">
            <label class="top">Miles</label>
            <input type="number" name="inv_miles" id="invMiles" required value="<%= locals.inv_miles %>">
            <label class="top">Color</label>
            <input type="text" name="inv_color" id="invColor" required value="<%= locals.inv_color %>">

     </fieldset>

    <input type="submit" value="add" class="submitBtn">


</form>

</div>