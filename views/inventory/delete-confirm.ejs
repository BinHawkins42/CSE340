<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div>
<form id="invDelete"  method="post" action="/inv/delete">
            
    <fieldset>
        <legend>Confirm Deletion - The deletion is permanent.</legend>
           
            <label class="top">Make</label>
            <input type="text" readonly <% if(locals.inv_make) { %> value="<%= locals.inv_make %>"<% } %>>
            <label class="top">Model</label>
            <input type="text" readonly <% if(locals.inv_model) { %> value="<%= locals.inv_model %>"<% } %>>
            <label class="top">Price</label>
            <input type="text" readonly <% if(locals.inv_price) { %> value="<%= locals.inv_price %>"<% } %>>
            <label class="top">Year</label>
            <input type="text" readonly <% if(locals.inv_year) { %> value="<%= locals.inv_year %>"<% } %>>
           
            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>

            <input type="submit" value="Delete Vehicle" class="submitBtn">
     </fieldset>





</form>

</div>