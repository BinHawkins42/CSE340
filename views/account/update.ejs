<%- messages() %>

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<div>
<h2>you are now logged in.</h2>
<div>
    <form id="updateAccount" method="post" action="/account/update">        
        <fieldset>
            <label for="firstname">first name*</label>
            <input type="account_firstname" name="account_firstname" id="firstname" size="10" required value="<%= locals.account_firstname %>">
            <label for="lastname">last name*</label>
            <input type="account_lastname" name="account_lastname" id="lastname" required value="<%= locals.account_lastname %>">
            <label for="email">Email*</label>
            <input type="account_email" name="account_email" id="email" placeholder="someone@gmail.com" required value="<%= locals.account_email %>">
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
        </fieldset>

        <input type="submit" value="update account" class="submitBtn">


    </form>

</div>
<div>
    <form id="updatePassword" method="post" action="/account/update/:password">        
        <fieldset>
            <label for="password">Password*</label>
            <input type="account_password" name="account_password" id="pword" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A_Z])(?=*[^-a-zA-Z0-9])(?!.*\s).{12,}$">
            <div><i>Passward must be minimum of 12 characters and include 1 capital letter, 
                1 number and 1 special character.</i></div>
            <span id="pswdBtn">Show Password</span>
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> value="<%= locals.account_id %>"
            <% } %>>
        </fieldset>

        <input type="submit" value="reset password" class="submitBtn">


    </form>

</div>



<script src="/js/script.js"></script>
</div>